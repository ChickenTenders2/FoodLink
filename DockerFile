FROM python:3.9

RUN echo "ðŸ”¥ THIS IS THE RIGHT DOCKERFILE ðŸ”¥"
RUN apt-get update && apt-get install -y \
    gcc g++ make build-essential pkg-config \
    libmariadb-dev default-libmysqlclient-dev mariadb-client \
    libssl-dev libffi-dev libglib2.0-0 libsm6 libxext6 libxrender1 \
    zlib1g-dev curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Log what's in web_app â€” DEBUG
RUN mkdir -p web_app

COPY web_app/ ./web_app/
COPY setup/requirements.txt ./requirements.txt

# Log for debugging
RUN ls -l ./web_app/

RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

ENV FLASK_APP=web_app/app.py
ENV FLASK_RUN_HOST=0.0.0.0
ENV FLASK_RUN_PORT=8080
ENV PYTHONUNBUFFERED=1

EXPOSE 8080

CMD ["gunicorn", "-b", "0.0.0.0:8080", "web_app.app:app"]
