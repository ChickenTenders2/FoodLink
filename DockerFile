FROM python:3.9-slim

# Install system packages for mariadb, OpenCV, and builds
RUN apt-get update && apt-get install -y \
    gcc \
    libmariadb-dev \
    libmariadb-dev-compat \
    build-essential \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy app and install requirements
COPY web_app/ ./web_app/
COPY setup/requirements.txt ./requirements.txt

# Upgrade pip and install dependencies
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Set environment variables
ENV FLASK_APP=web_app/app.py
ENV FLASK_RUN_HOST=0.0.0.0
ENV FLASK_RUN_PORT=8080
ENV PYTHONUNBUFFERED=1

EXPOSE 8080

# Start app with Gunicorn for production (use Flask run if you prefer)
CMD ["gunicorn", "-b", "0.0.0.0:8080", "web_app.app:app"]
