FROM python:3.9-slim

# Install system dependencies for Python + MariaDB + OpenCV
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libmariadb-dev \
    libmariadb-dev-compat \
    build-essential \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy project files
COPY web_app/ ./web_app/
COPY setup/requirements.txt ./requirements.txt

# Upgrade pip and install Python packages
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Environment variables
ENV FLASK_APP=web_app/app.py
ENV FLASK_RUN_HOST=0.0.0.0
ENV FLASK_RUN_PORT=8080
ENV PYTHONUNBUFFERED=1

EXPOSE 8080

# Start app using Gunicorn (preferred) or Flask
CMD ["gunicorn", "-b", "0.0.0.0:8080", "web_app.app:app"]
